# 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# ================================
# 数据库配置
# ================================
DATABASE_URL=postgresql+psycopg://postgres:postgres@127.0.0.1:5432/coverage_platform

# ================================
# OpenAI API 配置（必需）
# ================================
# LLM 和 Embedding 的主要 API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM 模型配置
OPENAI_MODEL_VERIFIER=gpt-4o
OPENAI_MODEL_QUALITY=gpt-4o

# ================================
# Embedding API 配置（可选）
# ================================
# 如果 Embedding 服务与 LLM 服务不同，请单独配置
# 不设置则使用 OpenAI 的配置
EMBEDDING_API_KEY=
EMBEDDING_BASE_URL=
EMBEDDING_MODEL=text-embedding-3-small

# 向量维度配置
EMBEDDING_DIM=1536

# ================================
# 功能点提取 LLM 配置（可选）
# ================================
# 如果功能点提取使用不同的 LLM 服务，请单独配置
# 不设置则使用 OpenAI 的配置
FEATURE_EXTRACTOR_API_KEY=
FEATURE_EXTRACTOR_BASE_URL=
FEATURE_EXTRACTOR_MODEL=gpt-4o

# ================================
# Confluence 配置（可选）
# ================================
CONFLUENCE_BASE_URL=
CONFLUENCE_TOKEN=

# ================================
# LLM 开关配置（可选）
# ================================
ENABLE_LLM_VERIFIER_DEFAULT=false
ENABLE_LLM_QUALITY_DEFAULT=false

# LLM 调用限额（成本保护）
LLM_MAX_VERIFY_PER_SCENARIO=5
LLM_MAX_TOTAL_VERIFY_PER_RUN=500

# ================================
# RAG-Anything 配置（可选）
# ================================
RAG_WORKING_DIR=./rag_storage
RAG_ENABLE_GRAPH=true
RAG_QUERY_MODE=hybrid
RAG_USE_POSTGRES=true

# 附件处理配置
RAG_ENABLE_ATTACHMENT_PROCESSING=true
RAG_ATTACHMENT_OUTPUT_DIR=./attachment_output
RAG_SUPPORTED_ATTACHMENT_EXTENSIONS=.pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.png,.jpg,.jpeg
